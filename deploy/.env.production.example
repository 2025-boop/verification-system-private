# ==========================================
# DEPLOYMENT CONFIG
# ==========================================
DOMAIN=controlroom.example.com
ACME_EMAIL=admin@example.com

# ==========================================
# DATABASE
# ==========================================
DB_NAME=control_room
DB_USER=control_room_user
DB_PASSWORD=postgres_password_placeholder
DB_HOST=db
DB_PORT=5432

# ==========================================
# REDIS
# ==========================================
REDIS_HOST=redis
REDIS_PORT=6379

# ==========================================
# DJANGO SETTINGS
# ==========================================
DJANGO_ENV=production
DEBUG=False
SECRET_KEY=django-insecure-secret-key-placeholder
ALLOWED_HOSTS=*
CORS_ALLOWED_ORIGINS=https://controlroom.example.com
CSRF_TRUSTED_ORIGINS=https://controlroom.example.com

# ==========================================
# FRONTEND SETTINGS
# ==========================================
NEXT_PUBLIC_API_URL=https://controlroom.example.com/api
NEXT_PUBLIC_WS_URL=wss://controlroom.example.com
DJANGO_API_BASE=http://backend:8000
