
# ============================================================================
# CONTROL ROOM FRONTEND - Environment Variables
# ============================================================================
# Copy this file to .env.local for local development
# For production (Render), set these in the Render dashboard under Environment Variables

# ============================================================================
# NEXT.JS APPLICATION BASE URL
# ============================================================================
# The public URL where your Next.js frontend is deployed
# Local: http://localhost:3000 (or 4000, 5173 depending on your dev server)
# Production: Your deployment URL

# Local Development:
NEXT_PUBLIC_BASE_URL=http://localhost:3000

# Production (uncomment and use in Render):
# NEXT_PUBLIC_BASE_URL=https://control-room-frontend-agent-portal.onrender.com


# ============================================================================
# DJANGO BACKEND API BASE URL
# ============================================================================
# The base URL for Django REST API endpoints
# 
# Used for making HTTP REST API calls like:
# - ${DJANGO_API_BASE}/sessions/
# - ${DJANGO_API_BASE}/auth/login/
# - ${DJANGO_API_BASE}/users/
#


# Local Development:
DJANGO_API_BASE=http://localhost:8000

#Websocket URL
NEXT_PUBLIC_WS_URL=ws://localhost:8000

# Production (uncomment and use in Render):
# NEXT_PUBLIC_WS_URL=wss://control-room-backend.work.gd

